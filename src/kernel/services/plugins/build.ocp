begin library "static-files"
  files = [
   "global_static_files.ml"

   (* All static linked files which is used in globals.ml *)
     (file2string = [
        "../../../analysis/plugins/sempatch.md"
     ])
  ]
  requires = [ "default-config" "plugin-api"]
end

begin library "globals"
  files = [ "globals.ml" ]
  requires = [ "default-config" "static-files" "database" "plugin-api" "lint"]
end

begin library "plugin-api"
  files = [
    "plugin_types.mli"
    "plugin_error.ml"
    "input.mli"
    "warning_types.mli"
  ]
  requires = [ "compiler-libs.common" "plugin-utils" ]
end

begin library "lint"
  files = [
    "lint.ml"
    "lint_types.mli"
  ]
  requires = [ "plugin-api" "warning"]
end

begin library "warning"
    files = [ "warning.ml" ]
    requires = [ "compiler-libs.common" "plugin-api" "database" ]
end

begin library "plugin-lib"
  files = [
    "plugin.ml"
    "plugin_API.ml"
  ]
  requires = [
    "compiler-libs.common"
    "ocplib-sempatch"
    "default-config"
    "parsetree-iter"
    "plugin-utils"
    "plugin-api"
    "globals"
  ]
end
